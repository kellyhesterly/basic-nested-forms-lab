<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>
    <%= f.label 'Title' %>
    <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ing| %>
     <%= ing.label 'Ingredients' %>
     <%= ing.text_field :name %><br>

     <%= ing.label 'Quantity' %>
     <%= ing.text_field :quantity %><br>
  <% end %>

    <%= f.submit 'Create Recipe' %>
<% end %>